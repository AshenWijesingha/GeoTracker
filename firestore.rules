rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - users can only read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Trackers collection
    match /trackers/{trackerId} {
      // Allow reading if user owns the tracker OR if the tracker has no userId (shared tracker)
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
      
      // Allow creating if user sets themselves as owner
      allow create: if request.auth != null && 
                      request.resource.data.userId == request.auth.uid;
      
      // Allow updating/deleting if user owns the tracker
      allow update, delete: if request.auth != null && 
                              resource.data.userId == request.auth.uid;

      // Allow unauthenticated access for shared trackers (no userId field)
      // Shared trackers can be read, created, and updated by anyone with the link
      allow read: if resource.data.userId == null || !('userId' in resource.data);
      allow create: if !('userId' in request.resource.data);
      allow update: if resource.data.userId == null || !('userId' in resource.data);
    }
    
    // Location updates subcollection
    match /trackers/{trackerId}/locations/{locationId} {
      allow read, write: if request.auth != null;
    }
  }
}
